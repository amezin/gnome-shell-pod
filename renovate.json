{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    "npm:unpublishSafe"
  ],
  "docker": {
    "pinDigests": true
  },
  "dockerfile": {
    "fileMatch": [
      "(^|/|\\.)dockerfile$"
    ],
    "major": {
      "enabled": false
    },
    "groupName": "Base images",
    "automerge": true
  },
  "lockFileMaintenance": {
    "automerge": true
  }
}
