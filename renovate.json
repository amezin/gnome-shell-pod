{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    "npm:unpublishSafe",
    "schedule:daily",
    "schedule:automergeDaily"
  ],
  "docker": {
    "pinDigests": true
  },
  "dockerfile": {
    "fileMatch": [
      "(^|/|\\.)dockerfile$"
    ],
    "major": {
      "enabled": false
    },
    "patch": {
      "enabled": false
    },
    "groupName": "Base images"
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "automerge": true
}
